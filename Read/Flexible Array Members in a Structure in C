#include <stdio.h>
#include <stdlib.h>

struct Data {
    int n;
    int arr[];   
};

int main() {
    int n, i;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    struct Data* d = malloc(sizeof(struct Data) + n * sizeof(int));

    d->n = n;

    printf("\nEnter %d integers:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &d->arr[i]);
    }

    printf("\nYou entered:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", d->arr[i]);
    }

    free(d);
    return 0;
}
