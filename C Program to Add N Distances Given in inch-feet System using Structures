#include <stdio.h>

struct Distance {
    int feet;
    float inch;
};

int main() {
    int n, i;
    struct Distance d, total = {0, 0};

    printf("Enter number of distances: ");
    scanf("%d", &n);

    for (i = 0; i < n; i++) {
        printf("\nEnter distance %d:\n", i + 1);
        printf("Feet: ");
        scanf("%d", &d.feet);
        printf("Inches: ");
        scanf("%f", &d.inch);

        total.feet += d.feet;
        total.inch += d.inch;

        if (total.inch >= 12) {
            total.feet += (int)(total.inch / 12);
            total.inch = (int)total.inch % 12 + (total.inch - (int)total.inch);
        }
    }

    printf("\nTotal Distance = %d feet %.2f inches\n", total.feet, total.inch);

    return 0;
}
