#include <stdio.h>
#include <string.h>

struct Student {
    int id;
    char name[50];
    int age;
};

void sortStudents(struct Student s[], int n, int choice) {
    int i, j;
    struct Student temp;

    for (i = 0; i < n - 1; i++) {
        for (j = i + 1; j < n; j++) {

            if (choice == 1 && s[i].id > s[j].id) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }

            if (choice == 2 && s[i].age > s[j].age) {
                temp = s[i];
                s[i] = s[j];
                s[j] = temp;
            }
        }
    }
}

void display(struct Student s[], int n) {
    int i;
    printf("\nSorted Student Records:\n\n");
    printf("ID\tName\t\tAge\n");
    printf("---------------------------------\n");

    for (i = 0; i < n; i++) {
        printf("%d\t%-10s\t%d\n", s[i].id, s[i].name, s[i].age);
    }
}

int main() {
    int n, i, choice;

    printf("Enter number of students: ");
    scanf("%d", &n);

    struct Student s[n];

    for (i = 0; i < n; i++) {
        printf("\nEnter details of student %d:\n", i + 1);
        
        printf("ID: ");
        scanf("%d", &s[i].id);

        printf("Name: ");
        scanf("%s", s[i].name);

        printf("Age: ");
        scanf("%d", &s[i].age);
    }

    printf("\nSort students by:\n");
    printf("1. ID\n");
    printf("2. Age\n");
    printf("Enter choice: ");
    scanf("%d", &choice);

    if (choice != 1 && choice != 2) {
        printf("Invalid choice!\n");
        return 0;
    }

    sortStudents(s, n, choice);

    display(s, n);

    return 0;
}
